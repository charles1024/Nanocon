<% if signed_in? %>
<%= form_for @event do |f| %>
<% if @event.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@event.errors.count, "error") %> prohibited
	this event from being saved:</h2>
	<ul>
		<% @event.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div>
	<div style="width:30%; float:left; margin: 10px">
		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :npc %>
		<%= f.text_field :npc %>

		<br>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</div >
	<div style="width:10%; float:left; margin: 10px">
		<%= f.label :date %>
		<%= f.date_select :date %>
	</div>
	<div style="width:10%; float:left; margin: 10px">
		<%= f.label :time %>
		<%= f.time_select :time %>
	</div>
	<div style="width:30%; float:left; margin: 10px">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
</div>
<div style="float:right; width: 100%">
	<%= f.submit %>
</div>
</div>

<% end %>
<% else %>
	<h1>Sorry, you must be logged in to view this page.</h1>
<% end %>
<%= link_to 'Back', events_path %>