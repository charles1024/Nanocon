<h1>Events</h1>

<table style="border-color: black; border-width: 1px; background: white; ">
	<tr>
		<th style="padding:10px">Name</th>
		<th style="padding:10px">Description</th>
		<th style="padding:10px">Date</th>
		<th style="padding:10px">Time</th>
		<th style="padding:10px">NPC</th>
		<th style="padding:10px">Location</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>

	<% @event.each do |event| %>
	<tr>
		<td style="padding:10px"><%= event.name %></td>
		<td style="padding:10px"><%= event.description %></td>
		<td style="padding:10px"><%= event.date %></td>
		<td style="padding:10px"><%= event.time %></td>
		<td style="padding:10px"><%= event.npc %></td>
		<td style="padding:10px"><%= event.location %></td>
		<td style="padding:10px"><%= link_to 'Show', event %></td>
		<td style="padding:10px"><%= link_to 'Edit', edit_event_path(event) %></td>
		<td style="padding:10px"><%= link_to 'Destroy', event_path(event),
		method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>

</table>
<br>
<div>
	<%= link_to 'Submit Event', new_event_path %>	
</div>
